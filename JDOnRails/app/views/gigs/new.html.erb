<div class="new">
  <div class="container-fluid">
    <h1 class="center">New Gig</h1>
    <%= form_for(@gig, class: 'form-horizontal') do |g| %>  
      <div class="form-group"> 
        <%= g.label :where, class: 'col-xs-2 control-label' %>
        <div class="col-xs-10"> 
          <%= g.text_area :show, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= g.label :when, class: 'col-xs-2 control-label' %>
        <div class="col-xs-10">
          <%= g.text_area :show_date, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-offset-4 col-xs-2">
          <%= g.select :band_id, options_for_select([['JD White', 1], ['JD and Scott', 2], ['Debris', 3], ['Black Moon Tonic', 4], ['Desperados', 5]]) %>
        </div>
        <div>
          <%= g.submit "Create", class: 'btn btn-default' %>
        </div> 
      </div> 
    <% end %>
  </div>
</div>