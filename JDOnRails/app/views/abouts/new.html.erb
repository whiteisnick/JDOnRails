<div class="new">
  <div class="container-fluid">
    <h1 class="center">New About Entry</h1>
    <%= form_for(@about, class: 'form-horizontal') do |a| %>  
      <div class="form-group"> 
        <%= a.label :about, class: 'col-xs-2 control-label' %>
        <div class="col-xs-10"> 
          <%= a.text_area :description, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-offset-4 col-xs-2">
          <%= a.select :band_id, options_for_select([['JD White', 1], ['JD and Scott', 2], ['Debris', 3]]) %>
        </div>
        <div>
          <%= a.submit "Create", class: 'btn btn-default' %>
        </div> 
      </div> 
    <% end %>
  </div>
</div>