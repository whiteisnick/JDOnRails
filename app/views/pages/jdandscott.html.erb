<% @title = "JD and Scott" %>
<div class="jdandscott">

  <div class="container heading">
    <div class="row">
      <div class="col-xs-12 headroom"></div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <div class="headLeft">
          <% if user_signed_in? %>
            <h1><a href="/"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span></a></h1>
          <% end %>
          <h1 class="names">JD & Scott</h1>
          <div class="panel panel-default schedule">
            <!-- Default panel contents -->
            <div class="panel-heading">Upcoming Shows</div>
            <% if user_signed_in? %>
              <table class="table">
                <tr>
                  <th>Band</th>
                  <th>Gig</th>
                  <th>Gig Date</th>
                  <th></th>
                  <th></th>
                </tr>
                <% @gigs.each do |g| %>
                  <tr>
                    <td><%= g.show %></td>
                    <td><%= g.show_date %></td>
                    <td><%= link_to 'Edit', edit_gig_path(g) %></td>
                    <td><%= link_to 'Delete', g, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </table>
              <%= link_to "New Gig", new_gig_path %>
            <% else %>
              <table class="table table-hover">
                <% @gigs.each do |g| %>
                  <tr>
                    <td><%= g.show %></td>
                    <td><%= g.show_date %></td>
                  </tr>
                <% end %>
              </table>
            <% end %>
          </div><!-- panel -->
        </div><!-- divHeadLeft -->
      </div><!-- colHeadleft -->
      <div class="col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-0">
        <img src=<%= asset_path('jdAndScottAtTHL2014.jpg') %> alt="" class="img-circle">
      </div>
    </div><!-- row -->
  </div><!-- container -->

  <div class="container-fluid content">
    <div class="row">
      <div class="col-xs-offset-1 col-xs-10 info">
        <div class="panel panel-default">
          <div class="panel-body">
            <% if user_signed_in? %>
              <table class="table">
                <tr>
                  <th>Paragraph</th>
                  <th></th>
                  <th></th>
                </tr>
                <% @abouts.each do |a| %>
                <tr>
                  <td><%= a.description %></td>
                  <td><%= link_to 'Edit', edit_about_path(a) %></td>
                  <td><%= link_to 'Delete', a, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
                <% end %>
              </table>
              <%= link_to "New Paragraph", new_about_path %>
            <% else %>
              <% @abouts.each do |a| %>
                <p><%= a.description %></p>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <!--<div class="col-xs-6 media">


      </div>-->
      <div class="col-xs-offset-1 col-xs-10 news">
        <div class="panel panel-default">
          <div class="panel-body">
            <h4>News</h4>
            <% if user_signed_in? %>
              <table class="table">
                <tr>
                  <th>Entry</th>
                  <th></th>
                  <th></th>
                </tr>
                <% @stories.each do |s| %>
                <tr>
                  <td><%= s.news %></td>
                  <td><%= link_to 'Edit', edit_story_path(s) %></td>
                  <td><%= link_to 'Delete', s, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
                <% end %>
              </table>
              <%= link_to "New Entry", new_story_path %>
          <% else %>
            <ul class="list-group">
              <% @stories.each do |s| %>
                <li class="list-group-item"><p><%= s.news %></p></li>
              <% end %>
            </ul>
          <% end %>
          </div>
        </div>
      </div>
    </div><!-- row -->
  </div><!-- container -->

</div>
